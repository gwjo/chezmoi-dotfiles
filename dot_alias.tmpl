# Aliases
# vim: se ft=sh:


# Stop wireshark filling /tmp
alias wireshark='wireshark -a filesize:102400'

if \ls --color=auto &>/dev/null ; then
  # Colorful LS
  alias ls='ls --color=auto -F'
  eval $(dircolors -b "$HOME/.local/share/LS_COLORS")
elif \gls --color=auto &>/dev/null ; then
  # use brew coreutils if present
  alias ls='gls --color=auto -F'
  eval $(gdircolors -b "$HOME/.local/share/LS_COLORS")
elif ls -G l &>/dev/null ; then
  # BSD ls
  alias ls='ls -GF'
else
  # Hmm... no color
  alias ls='ls -F'
fi
# These use "ls" alias above
alias l='ls -lh'
alias la='ls -a'
alias ll='ls -alh'
alias lls='ls -lhrS'
alias llsa='ls -alhrS'
alias llt='ls -lhrt'
alias llta='ls -alhrt'


alias resizemonitor='xrandr --output DP-1 --scale 0.7x0.7 --fb 4608x1512 --output DP-2 --pos 2688x432'

alias 'zoom-camera'='v4l2-ctl -d /dev/video4 -c zoom_absolute=200'

##
## Docker
##

# Remove exited containers
alias drmx='docker rm -v $(docker ps -a -q -f status=exited)'

# Remove dangling images
alias drmd='docker rmi $(docker images -f "dangling=true" -q)'
