# EditorConfig: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line              = lf
trim_trailing_whitespace = true
insert_final_newline     = true
indent_style             = space
indent_size              = 2

shell_variant      = auto   # like -ln=auto
binary_next_line   = false  # not like -bn
switch_case_indent = true   # like -ci
space_redirects    = false  # not like -sr
keep_padding       = false   # not like -kp
function_next_line = false  # not like -fn


